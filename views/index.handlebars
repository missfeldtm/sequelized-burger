<div class="container text-center" id="header">
	<img class="img-fluid" src="../assets/imgs/burger-logo2.jpg" alt="burger-logo">

	<h1>EAT THA BURGER</h1>

</div>


<div class="container text-center" id="main-body">
	<div class="row">
		<div class="col-sm-5">
			<h2>Burgers To Eat</h2>

			<ul>
				{{#each products}}
				{{#unless this.devoured}}
				<li>
					{{this.id}}
					{{this.burger_name}}


					<form action="/{{this.id}}?_method=PUT" method="POST">
						<input type="hidden" name="devoured" value="true">
						<button class="btn-primary" type="submit">Devour It!</button>
					</form>

				</li>

				{{/unless}}
				{{/each}}
			</ul>
		</div>
		<div class="col-sm-2">
			<div class="divider"></div>
		</div>

		<div class="col-sm-5">
			<h2>Burgers Devoured</h2>

			<ul>
				{{#each products}}
				{{#if this.devoured}}
				<li>
					{{this.id}}
					{{this.burger_name}}

				</li>

				{{/if}}
				{{/each}}
			</ul>

		</div>
	</div>


	<div class="row">
		    <div class="center col-sm-12">

			<h2>Add A Burger!</h2>

			<form class="create-update-form" action="/" method="POST">

				<div class="form-group">
					<p>Enter a burger you want to order and click the Submit Order button.</p>
					<input type="text" id="ca" name="burger_name">
				</div>

				<button class="btn-primary" type="submit">Submit Order</button>
			</form>
			 
		</div>

	</div>